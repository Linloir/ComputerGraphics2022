{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\MinGW64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "${workspaceFolder}\\Dependencies\\src\\glad.c",
                "-I${workspaceFolder}\\Dependencies\\includes",
                "-L${workspaceFolder}\\Dependencies\\libs",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32",
                "-o",
                "${fileDirname}\\..\\build\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}